@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section style{
    @Styles.Render("~/Content/css-paging")
}
<div class="content">
    <div id="js-grid">
        <div class="header">
            <h1>
                模块管理</h1>
        </div>
        <ul class="breadcrumb">
            <li><a href="index.html">Home</a> <span class="divider">/</span></li>
            <li class="active">Module</li>
        </ul>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="btn-toolbar">
                    <button class="btn btn-primary" id="js-btn-toolbar-add">
                        <i class="icon-plus"></i>新增</button>
                    <button class="btn" id="js-btn-toolbar-delete" onclick="confirm('您确定要删除吗？删除后不可恢复！')">删除</button>
                    <button class="btn" id="js-btn-toolbar-refresh">刷新</button>
                    <form class="form-search inline-right">
                    <input type="text" placeholder="模块名称" id="js-input-search">
                    <button type="button" class="btn btn-primary pl10" id="js-btn-search">
                        搜索</button>
                    </form>
                </div>
                <div class="well">
                    <table class="table table-striped table-bordered table-hover" id="js-table">
                        @Html.Partial("_ModuleGrid")
                    </table>
                    <div class="pagination">
                    </div>
                </div>
                <div class="modal small hide fade" id="ModalDel" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                    aria-hidden="true">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            ×</button>
                        <span class="label label-important">警告</span>
                    </div>
                    <div class="modal-body">
                        <p class="error-text">
                            你确定要删除用户？ 删除后不可恢复！</p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn" data-dismiss="modal" aria-hidden="true">
                            取消</button>
                        <button class="btn btn-danger" id="js-btn-modal-delete" data-dismiss="modal">
                            确定</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="js-add-div" class="hide">
        <div class="navbar w97">
            <div class="navbar-inner">
                <a class="brand" href="#">新增模块信息</a>
            </div>
        </div>
        <form class="form-horizontal ml20" id="js-add-form">
        <div class="control-group">
            <label class="control-label">
                上级菜单</label>
            <div class="controls">
                <select name="ParentId" class="noCheck my-select">
                    <option>请选择</option>
                    <option value="1">系统管理</option>
                    <option value="6">资产管理</option>
                </select>
                <div class="form-tip form-info">
                </div>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                模块名称</label>
            <div class="controls">
                <input type="text" name="Name" class="empty form-input" id="js-module-name">
                <div class="form-tip">
                </div>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                模块代码</label>
            <div class="controls">
                <input type="text" name="Code" class="form-input-readonly" id="js-module-code" readonly />
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                是否启用</label>
            <div class="controls">
                <label class="radio inline">
                    <input type="radio" name="IsVisible" value="1" checked>是
                </label>
                <label class="radio inline">
                    <input type="radio" name="IsVisible" value="0">否
                </label>
            </div>
        </div>
        <div class="control-group">
            <div class="controls ml20">
                <input class="btn btn-primary" type="submit" id="js-btn-form-add" value="确定" />
                <input class="btn btn-primary" type="button" id="js-btn-form-cancel" value="取消" />
            </div>
        </div>
        </form>
    </div>
</div>
<script src="../../Scripts/my/pinyin.js" type="text/javascript"></script>
@Scripts.Render("~/Content/js-manage")
@section script{
    <script src="../../Scripts/my/myx.formValidate.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(".pagination").pagination('@ViewBag.TotalCount');
        $('#js-add-form').mValidate();
        $('#js-btn-search').on('click', function () {
            if ($('#js-input-search').val() == '') {
                alert('请输入搜索的内容');
            }
            else {
                $.post('/' + thisModel + '/Search', { 'name': $('#js-input-search').val() }, function (result) {
                    $('#js-table').html(result);
                });
                $(".pagination").pagination('@ViewBag.SearchCount');
            }
        });
    </script>
}
